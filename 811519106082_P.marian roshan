int Value;
int sensorState = 0;
int sensorValue = 0;

void setup()
{
  pinMode(9, OUTPUT);
  pinMode(A0, INPUT_PULLUP);
  pinMode(A1, INPUT);
  pinMode(9, OUTPUT);
  pinMode(A3, INPUT);
  pinMode(9, OUTPUT);
  Serial.begin(9600);
}
